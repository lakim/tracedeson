<div id="sounds" class="content-pane">
	<h1>Lecteur</h1>
	<ul>
	<% @media.each do |medium| %>
		<li id="sound-<%= medium.number %>">
		  <%= medium.type %> - 
		<% if medium.type == 'Sound' %>
			<a href="<%= medium.url %>" class="sc-player"><%= medium.title %></a>
		<% elsif medium.type == 'Video' %>
		  <a href="<%= medium.url %>" rel="pretty-photo"><%= medium.title %></a>
		<% end %>
		</li>
	<% end %>
	</ul>
</div>
